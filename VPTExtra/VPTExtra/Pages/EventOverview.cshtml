@page "/event/overview/{eventId}"
@model VPTExtra.Pages.EventOverviewModel
@{
}
<h1 style="color:red;">Choose your seat.</h1>
<h2>Event: @Model.Event.Location</h2>
<div class="sectors">
    @foreach (var sector in Model.Event.Parts)
    {
        <div class="sector">
            <h3>Sector @sector.Name</h3>
            <div class="rows">
                @foreach (var row in sector.Rows)
                {
                    <div class="row">
                        <p style="font-weight:bold;">Row @row.Name</p>
                        <div class="seats">
                            @foreach (var seat in row.Chairs)
                            {
                                <div class="seat-inner">
                                    @if (seat.User != null)
                                    {
                                        <label style="color: red;">@seat.Name taken</label>
                                    }
                                    else
                                    {
                                        <form method="post">
                                            <button type="submit" asp-page-handler="PlaceVisitor" onclick="return confirm('Are you sure?')"
                                                    asp-route-chairId="@seat.Id" class="seat-code">
                                                @seat.Name
                                            </button>
                                        </form>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .sectors {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
    }

    .sector {
        width: auto;
        margin-right: 50px;
        margin-bottom: 50px;
    }

    .row {
        margin-bottom: 30px;
    }

    .seats {
        display: flex;
        margin-right: 130px;
        margin-top: 20px;
    }

    .seat, .split-seat {
        position: relative;
        width: 100px;
        height: 40px;
        border: 1px solid #000;
        margin-right: 5px;
    }

    .split-seat {
        border-color: red;
    }

    .seat-inner {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .seat-code {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-weight: bold;
        text-align: center;
    }

    .seat-occupant {
        position: absolute;
        bottom: 2px;
        right: 2px;
        font-size: 10px;
    }

    .minor-marker {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-weight: bold;
        font-size: 12px;
        color: white;
    }
</style>
