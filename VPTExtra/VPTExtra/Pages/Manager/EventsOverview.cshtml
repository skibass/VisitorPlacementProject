@page "/manager/events/overview"
@model VPTExtra.Pages.Manager.EventsOverviewModel
@{
}
<head>
    <link href="@Url.Content("~/css/ManageEvents.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="scroll">

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }
    <div class="outer-box-frame">

        <div class="container">
            <ul class="responsive-table">
                <li class="table-header">
                    <div class="col col-1">Id</div>
                    <div class="col col-2">Name</div>
                    <div class="col col-3">Start Date</div>
                    <div class="col col-4">End Date</div>
                    <div class="col col-5">Visitor Limit</div>
                    <div class="col col-6">Chairs reserved</div>
                    <div class="col col-7"></div>
                </li>
                @foreach (var item in Model.events)
                {
                    <li class="table-row">
                        <div class="col col-1"><a class="btn btn-primary" style="background:blue; width: 60px;" asp-page="../EventOverview" asp-route-eventId="@item.Id">View</a></div>
                        <div class="col col-2">@item.Location</div>
                        <div class="col col-3">@item.StartDate</div>
                        <div class="col col-4">@item.EndDate</div>
                        <div class="col col-5">@item.VisitorLimit</div>
                        <div class="col col-6">@item.ChairsReserved</div>
                        <div class="col col-7">
                            <form method="post">
                                <div class="profile-actions">
                                    <button type="submit" class="btn btn--primary" asp-page-handler="delete" onclick="return confirm('Are you sure?')"
                                            asp-route-id="@item.Id">
                                        delete
                                    </button>
                                </div>

                            </form>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
    </div>
</body>


