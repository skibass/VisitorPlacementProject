@page "/login"
@model VPTExtra.Pages.Account.LoginModel
@{
}
<br />
<br />
<br />
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
<form method="post" asp-page-handler="Login">
    <div class="form-outline mb-4">
        <input class="form-control" required asp-for="@Model.userToLogin.Name">
        <label class="form-label" style="color:white;" for="form2Example1">User name</label>
    </div>

    <div class="form-outline mb-4">
        <input class="form-control" required type="email" asp-for="@Model.userToLogin.Email">
        <label class="form-label" style="color:white;" for="form2Example1">Email address</label>
    </div>

    <div class="form-outline mb-4">
        <input class="form-control" required type="password" asp-for="@Model.userToLogin.Password">
        <label class="form-label" style="color:white;" for="form2Example2">Password</label>
    </div>


    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

    <div class="text-center">
        <p style="color:white;">Not a member? <a asp-page="Registration" style="color:lightblue;">Register</a></p>     
    </div>
</form>